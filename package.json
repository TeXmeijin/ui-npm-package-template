{
  "name": "@texmeijin/ui-library-example",
  "version": "0.0.1",
  "description": "UI Components and Utils built with React.",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:storybook": "npm run storybook",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist/ && run-p build:*",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "node build.mjs",
    "build:css": "tailwindcss -i ./src/styles/index.css -o ./output.css",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint './**/*.ts{,x}'",
    "lint:prettier": "prettier --check './src/**/*.ts{,x}'",
    "lint:tsc": "npm run typecheck",
    "format": "run-s -c format:*",
    "format:eslint": "eslint --fix './**/*.ts{,x}'",
    "format:prettier": "prettier --write './src/**/*.ts{,x}'",
    "test": "run-p test:*",
    "test:ci": "vitest run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate": "scaffdog generate",
    "prepare": "npx simple-git-hooks"
  },
  "author": "@TeXmeijin",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@tiptap/core": "^2.1.16",
    "@tiptap/extension-bold": "^2.1.16",
    "@tiptap/extension-bullet-list": "^2.1.16",
    "@tiptap/extension-character-count": "^2.1.16",
    "@tiptap/extension-color": "^2.1.16",
    "@tiptap/extension-document": "^2.1.16",
    "@tiptap/extension-heading": "^2.1.16",
    "@tiptap/extension-image": "^2.1.16",
    "@tiptap/extension-italic": "^2.1.16",
    "@tiptap/extension-list-item": "^2.1.16",
    "@tiptap/extension-ordered-list": "^2.1.16",
    "@tiptap/extension-paragraph": "^2.1.16",
    "@tiptap/extension-text": "^2.1.16",
    "@tiptap/extension-text-style": "^2.1.16",
    "@tiptap/pm": "^2.1.16",
    "@tiptap/react": "^2.1.16",
    "clsx": "^2.1.0",
    "react-icons": "^5.0.1",
    "tiptap-extension-font-size": "^1.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.9",
    "@storybook/addon-interactions": "^7.6.9",
    "@storybook/addon-links": "^7.6.9",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.9",
    "@storybook/react": "^7.6.9",
    "@storybook/react-vite": "^7.6.9",
    "@storybook/test": "^7.6.9",
    "@storybook/types": "^7.6.9",
    "@types/cheerio": "^0.22.35",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-smarthr": "^6.15.6",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-storybook": "^0.6.15",
    "lint-staged": "^15.2.0",
    "next": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-config-smarthr": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scaffdog": "^3.0.0",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^7.6.9",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "next": "^14 || ^12 || ^13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
