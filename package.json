{
  "name": "@texmeijin/meijin-ui",
  "version": "0.0.2",
  "description": "UI Components and Utils built with React.",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:storybook": "npm run storybook",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist/ && run-p build:*",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "node build.mjs",
    "build:css": "tailwindcss -i ./src/styles/index.css -o ./output.css",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint './**/*.ts{,x}'",
    "lint:prettier": "prettier --check './src/**/*.ts{,x}'",
    "lint:tsc": "npm run typecheck",
    "format": "run-s -c format:*",
    "format:eslint": "eslint --fix './**/*.ts{,x}'",
    "format:prettier": "prettier --write './src/**/*.ts{,x}'",
    "test": "run-p test:*",
    "test:ci": "vitest run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate": "scaffdog generate",
    "pub": "npm publish --access=public .",
    "prepare": "npx simple-git-hooks"
  },
  "author": "@TeXmeijin",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@tiptap/core": "^2.2.4",
    "@tiptap/extension-bold": "^2.2.4",
    "@tiptap/extension-bullet-list": "^2.2.4",
    "@tiptap/extension-character-count": "^2.2.4",
    "@tiptap/extension-color": "^2.2.4",
    "@tiptap/extension-document": "^2.2.4",
    "@tiptap/extension-heading": "^2.2.4",
    "@tiptap/extension-image": "^2.2.4",
    "@tiptap/extension-italic": "^2.2.4",
    "@tiptap/extension-list-item": "^2.2.4",
    "@tiptap/extension-ordered-list": "^2.2.4",
    "@tiptap/extension-paragraph": "^2.2.4",
    "@tiptap/extension-text": "^2.2.4",
    "@tiptap/extension-text-style": "^2.2.4",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/react": "^2.2.4",
    "clsx": "^2.1.0",
    "react-icons": "^5.0.1",
    "tiptap-extension-font-size": "^1.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.4",
    "@storybook/addon-interactions": "^8.0.4",
    "@storybook/addon-links": "^8.0.4",
    "@storybook/addon-onboarding": "^8.0.4",
    "@storybook/blocks": "^8.0.4",
    "@storybook/react": "^8.0.4",
    "@storybook/react-vite": "^8.0.4",
    "@storybook/test": "^8.0.4",
    "@storybook/types": "^8.0.4",
    "@types/cheerio": "^0.22.35",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-smarthr": "^6.23.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "lint-staged": "^15.2.2",
    "next": "^14.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-config-smarthr": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scaffdog": "^3.0.0",
    "simple-git-hooks": "^2.11.0",
    "storybook": "^8.0.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "next": "^14 || ^12 || ^13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
